{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "components.d.ts",
    "frontend/src/**/*",
    "frontend/src/**/*.vue"
  ],
  "resolveJsonModule": true,
  "exclude": [
    "frontend/src/**/__tests__/*"
  ],
  "compilerOptions": {
    "types": [
      "unplugin-icons/types/vue"
    ],
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable",
      "WebWorker"
    ],
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "paths": {
      "@/*": [
        "./frontend/src/*"
      ]
    }
  }
}